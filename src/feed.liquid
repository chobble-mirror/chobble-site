---
permalink: feed.xml
eleventyExcludeFromCollections: true
metadata:
  title: "BASH.web Blog"
  subtitle: "Web development and tech insights"
  url: "https://bash.web/"
  feedUrl: "https://bash.web/feed.xml"
  author:
    name: "BASH.web"
    email: "hello@bash.web"
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.subtitle }}</subtitle>
  <link href="{{ metadata.feedUrl }}" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated>{{ collections.blog | getNewestCollectionItemDate | dateToRfc822 }}</updated>
  <id>{{ metadata.url }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {% for post in collections.blog reversed %}
    <entry>
      <title>{{ post.data.title }}</title>
      <link href="{{ post.url | absoluteUrl: metadata.url }}"/>
      <updated>{{ post.date | dateToRfc822 }}</updated>
      <id>{{ post.url | absoluteUrl: metadata.url }}</id>
      <content type="html">{{ post.templateContent | htmlToAbsoluteUrls: metadata.url }}</content>
    </entry>
  {% endfor %}
</feed>

<nav>
  <span class="brand">
    <a href="/">
      <img src="/assets/chobble-logo.png" class="logo" alt="Chobble" />
    </a>
  </span>
  <input type="checkbox" id="nav-toggle" class="nav-toggle">
  <label for="nav-toggle" class="nav-toggle-label">
    <span></span>
  </label>
  <ul class="nav-links">
    {% for item in navigation.items %}
      <li>
        <a href="{{ item.url }}"
          {% if page.url contains item.section %}
            class="active"
          {% endif %}
        >{{ item.text }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>

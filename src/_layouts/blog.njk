---
layout: base
---
<article class="blog-post">
    <header class="blog-header">
        <h1>{{ title }}</h1>
        <time datetime="{{ date | date }}">{{ date | date("MMMM D, YYYY") }}</time>
    </header>

    {{ content | safe }}

    <footer class="blog-footer">
        <div class="tags">
            {%- for tag in tags -%}
                {%- if tag != "blog" -%}
                <span class="tag">{{ tag }}</span>
                {%- endif -%}
            {%- endfor -%}
        </div>
    </footer>
</article>

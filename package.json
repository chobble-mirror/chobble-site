{
  "name": "bashweb",
  "version": "1.0.0",
  "description": "BASH.web agency website",
  "scripts": {
    "start": "npm-run-all --parallel watch:eleventy watch:sass",
    "build": "npm-run-all sass:build eleventy:build",
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "sass --watch src/scss:_site/css --style compressed",
    "sass:build": "sass src/scss:_site/css --style compressed",
    "eleventy:build": "eleventy"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0-alpha.5",
    "@11ty/eleventy-plugin-rss": "^2.0.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.80.5"
  }
}
